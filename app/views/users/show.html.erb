
<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>User </h1>

    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
        </tr>
      </thead>
      <tbody>
        <%= render @user %>
      </tbody>
    </table>
    <div class="actions d-flex gap-2">
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
      <%= button_to "Destroy", @user, method: :delete, class: "btn btn-danger d-inline" %>
      <%= link_to "Return", users_path, class: "btn btn-secondary" %>
    </div>


</div>



