
<%= form_with(model: user, class: "form") do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, class: "form-label" %>
    <div class="input-group">
      <%= form.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: "form-label" %>
    <div class="input-group">
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <div class="input-group">
      <%= form.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :phone, class: "form-label" %>
    <div class="input-group">
      <%= form.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :twitter, class: "form-label" %>
    <div class="input-group">
      <%= form.text_field :twitter, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">

    <div class="input-group">
      <%= form.number_field :friend_id, id: :user_friend_id, class: "form-control", value: current_friend.id, type: "hidden" %>
    </div>
  </div>



  <div class="form-group">
    <div class="input-group">
      <%= form.submit "Save", class: "btn btn-primary mt-3" %>
    </div>
  </div>

<% end %>
